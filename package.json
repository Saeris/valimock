{
  "name": "valimock",
  "description": "Generate mock data for Valibot schemas using Faker",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Drake Costa <drake@saeris.gg> (https://saeris.gg)",
  "keywords": [
    "valibot",
    "mocking",
    "faker"
  ],
  "homepage": "https://github.com/saeris/valimock#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/valimock.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18.x"
  },
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "main": "./dist/Valimock.js",
  "module": "./dist/Valimock.js",
  "types": "./dist/Valimock.d.ts",
  "exports": {
    ".": {
      "module": "./dist/Valimock.js",
      "import": {
        "types": "./dist/Valimock.d.ts",
        "default": "./dist/Valimock.js"
      },
      "require": {
        "types": "./dist/Valimock.d.cts",
        "default": "./dist/Valimock.cjs"
      },
      "default": "./dist/Valimock.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "ci": "yarn lint && yarn typecheck && yarn test",
    "build": "tsup",
    "lint": "eslint \"./src/**/*.ts\" --cache",
    "format": "yarn lint --fix",
    "release": "yarn build && changeset publish",
    "test": "vitest --fileParallelism",
    "typecheck": "tsc --noemit"
  },
  "dependencies": {
    "colorjs.io": "^0.5.2",
    "randexp": "^0.5.3"
  },
  "peerDependencies": {
    "@faker-js/faker": ">= 8.0.0",
    "valibot": ">= 0.30.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.3",
    "@faker-js/faker": "^9.7.0",
    "@saeris/eslint-config": "^2.6.0",
    "@types/eslint": "^8.56.12",
    "@types/node": "22.15.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vitest": "^0.4.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "valibot": "^1.1.0",
    "vitest": "^3.1.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@saeris/eslint-config/base",
      "@saeris/eslint-config/typescript",
      "@saeris/eslint-config/type-aware"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      }
    },
    "overrides": [
      {
        "files": [
          "./src/**/*.ts"
        ],
        "excludedFiles": "*.spec.ts",
        "rules": {
          "import/no-useless-path-segments": [
            "error",
            {
              "noUselessIndex": false
            }
          ]
        }
      },
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "vitest/env": true
        },
        "plugins": [
          "vitest"
        ],
        "extends": [
          "plugin:vitest/recommended"
        ]
      }
    ],
    "ignorePatterns": [
      "node_modules",
      "**/dist/**/*",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}

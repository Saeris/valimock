{
  "name": "valimock",
  "description": "Generate mock data for Valibot schemas using Faker",
  "version": "1.3.1",
  "license": "MIT",
  "author": "Drake Costa <drake@saeris.gg> (https://saeris.gg)",
  "keywords": [
    "valibot",
    "mocking",
    "faker"
  ],
  "homepage": "https://github.com/saeris/valimock#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/valimock.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18.x"
  },
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "main": "./dist/Valimock.js",
  "module": "./dist/Valimock.js",
  "types": "./dist/Valimock.d.ts",
  "exports": {
    ".": {
      "module": "./dist/Valimock.js",
      "import": {
        "types": "./dist/Valimock.d.ts",
        "default": "./dist/Valimock.js"
      },
      "default": "./dist/Valimock.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "ci": "yarn lint && yarn typecheck && yarn test",
    "build": "tsdown",
    "lint": "eslint \"./src/**/*.ts\" --cache",
    "format": "yarn lint --fix",
    "release": "yarn build && changeset publish",
    "test": "vitest --fileParallelism",
    "typecheck": "tsc --noemit"
  },
  "dependencies": {
    "randexp": "^0.5.3"
  },
  "peerDependencies": {
    "@faker-js/faker": ">= 8.0.0",
    "valibot": ">= 0.30.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@faker-js/faker": "^9.8.0",
    "@saeris/eslint-config": "^3.1.2",
    "@types/node": "24.0.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "valibot": "^1.1.0",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
